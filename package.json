{
  "name": "chad-agent",
  "version": "1.0.0",
  "description": "CHAD Desktop Agent - Cyber Helpdesk & Automation Daemon endpoint client",
  "main": "src/main.js",
  "author": "CHAD Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.chad.agent",
    "productName": "CHAD Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "win": {
      "target": ["portable"]
    },
    "mac": {
      "target": ["zip"],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ws": "^8.14.2",
    "uuid": "^9.0.0",
    "systeminformation": "^5.21.0"
  }
}
